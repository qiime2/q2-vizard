{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": {
    "text": {"signal": "title"},
    "fontSize": 20,
    "orient": "top",
    "anchor": "start",
    "subtitle": " "
  },
  "width": 900,
  "height": 900,
  "padding": 20,

  "signals": [
    {"name": "title",
    "value": {"{{REPLACE_PARAM}}": "title"},
    "bind": {"input": "input"}
   },
   {
     "name": "yField",
     "value": {"{{REPLACE_PARAM}}": "y_dropdown_default"},
     "bind": {
       "input": "select",
       "options": {"{{REPLACE_PARAM}}": "md_cols_numeric"}
     }
    },
    {
      "name": "curveType",
      "value": "linear",
      "bind": {
        "input": "select",
        "options": [
          "linear",
          "step"
        ]
      }
    }
  ],

  "data": [
    {"name": "table",
     "values": {"{{REPLACE_PARAM}}": "metadata"}
    }
  ],

  "scales": [
    {
      "name": "x_scale",
      "type": "point",
      "range": "width",
      "domain": {"data": "table",
                 "field": {"{{REPLACE_PARAM}}": "x_measure"}}
    },
    {
      "name": "y_scale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table",
                 "field": {"signal": "yField"}}
    },
    {
      "name": "color_scale",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table",
                 "field": {"{{REPLACE_PARAM}}": "facet_by"},
                 "sort": true}
    }
],

"axes": [
    {
      "scale": "x_scale",
      "labelFontSize": 12,
      "grid": true,
      "orient": "bottom",
      "tickCount": 5,
      "title": {"{{REPLACE_PARAM}}": "x_measure"},
      "titleFontSize": 14,
      "titlePadding": 20
    },
    {
      "scale": "y_scale",
      "labelFontSize": 12,
      "grid": true,
      "orient": "left",
      "title": {"signal": "yField"},
      "titleFontSize": 14,
      "titlePadding": 20
    }
  ],

  "legends": [
    {
      "stroke": "color_scale",
      "symbolSize": 150,
      "symbolStrokeWidth": 2.5,
      "labelFontSize": 14,
      "title": {"{{REPLACE_PARAM}}": "facet_by"},
      "titleFontSize": 16,
      "encode": {
      "symbols": {
          "name": "legendSymbol",
          "interactive": false
      },
      "labels": {
          "name": "legendLabel",
          "interactive": false
        }
      }
    }
  ],

  "marks": [
    {
      "type": "facet_by",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "facet_byby": {"{{REPLACE_PARAM}}": "facet_by"}
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "update": {
              "x": {"scale": "x_scale", "field": {"{{REPLACE_PARAM}}": "x_measure"}},
              "y": {"scale": "y_scale", "field": {"signal": "yField"}},
              "interpolate": {"signal": "curveType"},
              "stroke": {"scale": "color_scale",
                         "field": {"{{REPLACE_PARAM}}": "facet_by"}},
              "strokeWidth": {"value": 2.5},
              "strokeOpacity": {"value": 1}
            }
          }
        },
        {
          "type": "symbol",
          "from": {"data": "series"},
          "encode": {
            "update": {
              "x": {"scale": "x_scale", "field": {"{{REPLACE_PARAM}}": "x_measure"}},
              "y": {"scale": "y_scale", "field": {"signal": "yField"}},
              "shape": {"value": "circle"},
              "stroke": {"scale": "color_scale",
                         "field": {"{{REPLACE_PARAM}}": "facet_by"}},
              "strokeWidth": {"value": 2.5},
              "fill": {"value": "white"},
              "size": {"value": 100}
            }
          }
        }
      ]
    }
  ]
}
